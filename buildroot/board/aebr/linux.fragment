# BTRFS
CONFIG_BTRFS_FS=y

# WiFi drivers for Raspberry Pi
# Enable Broadcom FullMAC WLAN driver
CONFIG_BRCMFMAC=m
CONFIG_BRCMFMAC_SDIO=y
CONFIG_BRCMFMAC_USB=y
CONFIG_BRCMFMAC_PCIE=y

# Additional WiFi support
CONFIG_CFG80211=m
CONFIG_MAC80211=m

# Firmware loading support
CONFIG_FW_LOADER=y
CONFIG_FW_LOADER_USER_HELPER=y

# HiFiBerry audio modules
CONFIG_SND_BCM2708_SOC_HIFIBERRY_DAC=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_DACPLUS=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_DACPLUSADC=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_DACPLUSADCPRO=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_DACPLUSHD=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_DIGI=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_AMP=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_AMP100=m
CONFIG_SND_BCM2708_SOC_HIFIBERRY_AMP3=m
CONFIG_SND_SOC_HIFIBERRY_DACPLUS=m
CONFIG_SND_SOC_HIFIBERRY_DACPLUSADC=m
CONFIG_SND_SOC_HIFIBERRY_DACPLUSADCPRO=m
CONFIG_SND_SOC_HIFIBERRY_DACPLUSHD=m
CONFIG_SND_SOC_HIFIBERRY_DAC=m
CONFIG_SND_SOC_HIFIBERRY_DIGI=m
CONFIG_SND_SOC_HIFIBERRY_AMP=m
CONFIG_SND_SOC_HIFIBERRY_AMP100=m
CONFIG_SND_SOC_HIFIBERRY_AMP3=m

# Additional audio codec drivers for HiFiBerry
CONFIG_SND_SOC_PCM5102A=m
CONFIG_SND_SOC_PCM512x=m
CONFIG_SND_SOC_PCM512x_I2C=m
CONFIG_SND_SOC_PCM512x_SPI=m
CONFIG_SND_SOC_WM8804=m
CONFIG_SND_SOC_WM8804_I2C=m
CONFIG_SND_SOC_WM8804_SPI=m
CONFIG_SND_SOC_TAS5713=m
CONFIG_SND_SOC_TAS5720=m

# Ensure ALSA SoC core is enabled for HiFiBerry modules
CONFIG_SND_SOC=m
CONFIG_SND_BCM2708_SOC_I2S=m
