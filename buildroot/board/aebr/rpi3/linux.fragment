CONFIG_BTRFS_FS=y

# Firmware loading support
CONFIG_FW_LOADER=y
CONFIG_FW_LOADER_USER_HELPER=y

# WiFi drivers for Raspberry Pi
# Enable Broadcom FullMAC WLAN driver
CONFIG_BRCMFMAC=m
CONFIG_BRCMFMAC_SDIO=y
CONFIG_BRCMFMAC_USB=y
CONFIG_BRCMFMAC_PCIE=y

# Additional WiFi support
CONFIG_CFG80211=m
CONFIG_MAC80211=m
